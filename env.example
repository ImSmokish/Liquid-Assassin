# LiquidAssassin Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration (Vercel Postgres)
POSTGRES_HOST=your-postgres-host
POSTGRES_PORT=5432
POSTGRES_DATABASE=your-database-name
POSTGRES_USER=your-username
POSTGRES_PASSWORD=your-password
POSTGRES_URL=postgresql://username:password@host:port/database

# Blockchain Configuration
PRIVATE_KEY=your-private-key-here
OWNER_ADDRESS=your-wallet-address

# Alchemy API Keys (for WebSocket connections)
ALCHEMY_API_KEY=your-alchemy-api-key

# Smart Contract Addresses (will be filled after deployment)
LIQUIDATOR_CONTRACT_1=0x... # Ethereum
LIQUIDATOR_CONTRACT_10=0x... # Optimism
LIQUIDATOR_CONTRACT_42161=0x... # Arbitrum
LIQUIDATOR_CONTRACT_137=0x... # Polygon

# Server Configuration
PORT=3001
NODE_ENV=production

# Chain-specific RPC URLs (if not using Alchemy)
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_KEY
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY
POLYGON_RPC_URL=https://poly-mainnet.g.alchemy.com/v2/YOUR_KEY

# Monitoring Configuration
SCAN_INTERVAL=10000 # 10 seconds
MAX_POSITIONS=1000
HEALTH_FACTOR_MONITORING_MIN=0.75
HEALTH_FACTOR_MONITORING_MAX=1.05
HEALTH_FACTOR_EXECUTION_MIN=0.85
HEALTH_FACTOR_EXECUTION_MAX=0.87

# Flash Loan Configuration
FLASH_LOAN_FEE_RATE=0.0009 # 0.09% for Aave V3
MAX_FLASH_LOAN_AMOUNT=1000000 # 1M USDC

# Cross-chain Bridge Configuration
STARGATE_ENABLED=true
HOP_PROTOCOL_ENABLED=true
LAYERZERO_ENABLED=true

# DEX Configuration
UNISWAP_V2_ENABLED=true
UNISWAP_V3_ENABLED=true
SUSHISWAP_ENABLED=true

# Security
ENABLE_OWNER_VERIFICATION=true
REQUIRE_PRIVATE_KEY=true
MAX_GAS_PRICE=100000000000 # 100 gwei
